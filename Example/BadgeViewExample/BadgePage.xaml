<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:badge="clr-namespace:BadgeView.Shared;assembly=BadgeView.Shared" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="BadgeViewExample.BadgePage">
    <ContentPage.Content>
        <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand" VerticalOptions="Center">
            <Label HorizontalTextAlignment="Center" Text="Look at me!" />
            <badge:BadgeView Text="3" BadgeColor="Green" TextColor="Yellow" VerticalOptions="Center" HorizontalOptions="End">
                <badge:BadgeView.FontFamily>
                    <OnPlatform x:TypeArguments="x:String">
                        <On Platform="Android" Value="sans-serif-thin" />
                        <On Platform="iOS" Value="Courier-Bold" />
                    </OnPlatform>
                </badge:BadgeView.FontFamily>
            </badge:BadgeView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>